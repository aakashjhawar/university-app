<%= render 'shared/errors', obj: @student %>

<div class="center-align sign-up-form">
	<div class="row center">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				
		<h3 class="center-align"><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
				<div class="row">

				<%= form_for(@student, html: {class: "col s12"}) do |f| %>
					<div class="row">
						<div class="input-field col s12">
							<%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
							<%= f.label :name, class: "active" %>
						</div>
					</div>

					<div class="row">
						<div class="input-field col s12">
							<%= f.email_field :email, placeholder: "Enter your email address", autofocus: true %>
							<%= f.label :email, class: "active" %>
						</div>
					</div>
					
					<div class="row">
						<div class="input-field col s12">
							<%= f.password_field :password, placeholder: "Enter your password" %>
							<%= f.label :password, class: "active" %>
						</div>
					</div>

					<div class="row">
						<div class="input-field col s12">
							<%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
							<%= f.label :password_confirmation, class: "active" %>
						</div>
					</div>

					<%= f.button( @student.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Update changes'.html_safe, class: "btn orange waves-effect waves-light right")%>
				<% end %>
				
				</div>
			</div>
		</div>
	</div>
</div>
